generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============ USER & AUTH ============
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  passwordHash  String?
  image         String?
  role          Role      @default(STUDENT)
  emailVerified Boolean   @default(false)
  otp           String?
  otpExpiry     DateTime?
  
  // Analytics
  learningStreak  Int       @default(0)
  lastActiveAt    DateTime?
  totalTimeSpent  Int       @default(0)  // In minutes
  
  // Alumni Profile
  linkedIn        String?
  portfolio       String?
  currentJob      String?
  company         String?
  bio             String?
  isAlumni        Boolean   @default(false)
  
  // Referral
  referralCode    String?   @unique
  referredBy      String?   // userId who referred this user
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  applications     Application[]
  certificates     Certificate[]
  submissions      Submission[]
  accounts         Account[]
  lessonProgress   LessonProgress[]
  mentorStudents   Application[]       @relation("MentorStudents")
  interviewResults InterviewResult[]
  referralsGiven   Referral[]          @relation("Referrer")
  referralUsed     Referral?           @relation("ReferredUser")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

enum Role {
  STUDENT
  MENTOR
  ADMIN
}

// ============ INTERNSHIP & APPLICATION ============
model Internship {
  id          String   @id @default(cuid())
  title       String
  description String?
  track       Track
  price       Float
  duration    String
  isActive    Boolean  @default(true)
  curriculum  Json?    @default("{}")
  createdAt   DateTime @default(now())
  
  applications     Application[]
  courses          Course[]
  interviewResults InterviewResult[]
}

enum Track {
  FULL_STACK
  AI_ML
  WEB3
}

model Application {
  id               String        @id @default(cuid())
  userId           String
  internshipId     String
  mentorId         String?
  status           AppStatus     @default(PENDING)
  
  eligibilityScore Float?
  interviewScore   Float?
  interviewLog     Json?
  
  paymentStatus    PaymentStatus @default(PENDING)
  paymentId        String?
  discountApplied  Float         @default(0)  // Referral discount
  
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  
  user        User        @relation(fields: [userId], references: [id])
  internship  Internship  @relation(fields: [internshipId], references: [id])
  mentor      User?       @relation("MentorStudents", fields: [mentorId], references: [id])
  certificate Certificate?
}

enum AppStatus {
  PENDING
  ELIGIBILITY_PASSED
  INTERVIEW_PASSED
  ENROLLED
  IN_PROGRESS
  COMPLETED
  REJECTED
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
}

// ============ AI INTERVIEW ============
model InterviewResult {
  id             String   @id @default(cuid())
  userId         String
  internshipId   String
  score          Float    // 0-100
  passed         Boolean
  transcript     Json?    // Array of Q&A
  feedback       String?  // AI generated feedback
  duration       Int?     // In seconds
  createdAt      DateTime @default(now())
  
  user       User       @relation(fields: [userId], references: [id])
  internship Internship @relation(fields: [internshipId], references: [id])
  
  @@unique([userId, internshipId])
}

// ============ REFERRAL SYSTEM ============
model Referral {
  id             String   @id @default(cuid())
  code           String   @unique
  referrerId     String
  referredUserId String?  @unique
  discount       Float    @default(200)  // Amount in INR
  status         ReferralStatus @default(PENDING)
  earnedAmount   Float    @default(0)    // Referrer earnings
  createdAt      DateTime @default(now())
  usedAt         DateTime?
  
  referrer     User  @relation("Referrer", fields: [referrerId], references: [id])
  referredUser User? @relation("ReferredUser", fields: [referredUserId], references: [id])
}

enum ReferralStatus {
  PENDING
  USED
  PAID
}

// ============ LMS: COURSES ============
model Course {
  id           String     @id @default(cuid())
  internshipId String
  title        String
  description  String?
  thumbnail    String?
  order        Int        @default(0)
  createdAt    DateTime   @default(now())
  
  internship   Internship @relation(fields: [internshipId], references: [id])
  modules      Module[]
}

model Module {
  id          String   @id @default(cuid())
  courseId    String
  title       String
  description String?
  order       Int      @default(0)
  
  course      Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  lessons     Lesson[]
}

model Lesson {
  id          String     @id @default(cuid())
  moduleId    String
  title       String
  description String?
  type        LessonType
  videoUrl    String?
  content     String?    // For READING type or additional instructions
  duration    Int?       // In minutes
  order       Int        @default(0)
  
  module         Module           @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  submissions    Submission[]
  lessonProgress LessonProgress[]
}

enum LessonType {
  VIDEO
  TASK
  READING
  QUIZ
}

// ============ LMS: SUBMISSIONS ============
model Submission {
  id             String           @id @default(cuid())
  lessonId       String
  userId         String
  content        String?
  fileUrl        String?
  status         SubmissionStatus @default(PENDING)
  mentorFeedback String?
  grade          Int?             // 0-100
  submittedAt    DateTime         @default(now())
  reviewedAt     DateTime?
  
  lesson Lesson @relation(fields: [lessonId], references: [id])
  user   User   @relation(fields: [userId], references: [id])
}

enum SubmissionStatus {
  PENDING
  UNDER_REVIEW
  APPROVED
  REJECTED
  RESUBMIT
}

// ============ CERTIFICATES ============
model Certificate {
  id             String   @id @default(cuid())
  applicationId  String   @unique
  userId         String
  uniqueCode     String   @unique
  grade          String?  // "Distinction", "Merit", "Pass"
  issuedAt       DateTime @default(now())
  certificateUrl String?
  
  application Application @relation(fields: [applicationId], references: [id])
  user        User        @relation(fields: [userId], references: [id])
}

// ============ LESSON PROGRESS ============
model LessonProgress {
  id          String   @id @default(cuid())
  userId      String
  lessonId    String
  completed   Boolean  @default(false)
  completedAt DateTime?
  timeSpent   Int      @default(0) // Minutes on this lesson
  
  user   User   @relation(fields: [userId], references: [id])
  lesson Lesson @relation(fields: [lessonId], references: [id])
  
  @@unique([userId, lessonId])
}
